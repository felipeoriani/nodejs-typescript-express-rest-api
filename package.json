{
  "name": "task-service",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:felipeoriani/task-service.git",
  "author": "Felipe Oriani <felipeoriani@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node --env-file=.env .build/src/index.js",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "test": "glob -c \"node --import tsx --no-warnings --test\" \"tests/**/*.{spec,test}.ts\"",
    "type-check": "yarn build --pretty --noEmit",
    "prisma:migrate": "yarn prisma migrate dev",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:seed": "node --env-file=.env scripts/seed.js",
    "docker:build": "docker build -t tasks ."
  },
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "apollo-server-express": "^3.13.0",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.20.0",
    "pino-http": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.12",
    "prisma": "^5.12.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4"
  }
}
